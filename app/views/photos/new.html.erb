<h1>New Photo</h1>

<%= form_for @photo, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :asset %><br>
    <%= f.file_field :asset %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>

<% end %>
